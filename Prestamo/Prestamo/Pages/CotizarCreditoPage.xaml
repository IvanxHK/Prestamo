                                   BackgroundColor="Transparent"
                                   CornerRadius="25"
                                   Margin="0, 10, 0, 0"
                                   BorderColor="Black">
                            <Editor Placeholder="Interés:"
                                        HeightRequest="40"
                                        Keyboard="Numeric"
                                        PlaceholderColor="Black"
                                        FontFamily="Main"
                            Text="{Binding InteresAnual}" 
                          >
                                <!--Text="{Binding SelectedDias}"-->
                                <Editor.Effects>
                                    <xct:RemoveBorderEffect />
                                </Editor.Effects>
                            </Editor>
                        </Frame>

                        <Label Text="Número de semanas" TextColor="{StaticResource textColor}" VerticalOptions="Center" FontSize="Medium"
                                              FontFamily="MainBold" />
                        <Frame Padding="10, 5"
                                   BackgroundColor="Transparent"
                                   CornerRadius="25"
                                   Margin="0, 10, 0, 0"
                                   BorderColor="Black">
                            <Editor Placeholder="Ingrese el número de semanas:"
                                        HeightRequest="40"
                                        Keyboard="Numeric"
                                        PlaceholderColor="Black"
                                        FontFamily="Main"
                            Text="{Binding NumeroSemanas}" 
                          >
                                <!--Text="{Binding SelectedDias}"-->
                                <Editor.Effects>
                                    <xct:RemoveBorderEffect />
                                </Editor.Effects>
                            </Editor>
                        </Frame>
                        <Label Text="Selecciona la fecha de inicio" TextColor="{StaticResource textColor}" VerticalOptions="Center" FontSize="Medium"
                                              FontFamily="MainBold"/>
                        <DatePicker x:Name="startDatePicker" BackgroundColor="#f7fafa" TextColor="Black"/>

                        <!--<DatePicker Date="{Binding SelectedFechaInicio}" x:Name="startDatePicker" BackgroundColor="Black" />-->


                        <Button Text="Cotizar"
